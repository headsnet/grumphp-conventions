{
    "name": "headsnet/grumphp-conventions",
    "description": "Centralised GrumPHP configuration used by Headsnet projects",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "phpro/grumphp": "^2.5",
        "ergebnis/composer-normalize": "^2.2"
    },
    "suggest": {
        "headsnet/grumphp-gitlab-lint": "^0.1.0"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true,
            "ergebnis/composer-normalize": true
        }
    }
}
